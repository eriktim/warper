{
  "bundles": {
    "dist/app-build": {
      "includes": [
        "[**/*.js]",
        "*.html!text",
        "*.css!text"
      ],
      "options": {
        "inject": true,
        "minify": true,
        "depCache": true,
        "rev": false
      }
    },
    "dist/vendor": {
      "includes": [
        "aurelia-framework",
        "aurelia-bootstrapper",
        "aurelia-fetch-client",
        "aurelia-router",
        "aurelia-animator-css",
        "aurelia-templating-binding",
        "aurelia-templating-resources",
        "aurelia-templating-router",
        "aurelia-loader-default",
        "aurelia-history-browser",
        "aurelia-logging-console",
        "awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css!text",
        "bootstrap",
        "bootstrap/css/bootstrap.css!text",
        "exif-js",
        "persistence",
        "persistence-plugin-firebase"
      ],
      "options": {
        "inject": true,
        "minify": false,
        "rev": false
      }
    }
  }
}
